{
    "id": "contact.json",
    "title": "contact",
    "description": "Schema definition of a Contact",
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "id": { "type": "integer" },
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "full_name": { "type": "string" },
        "personal_card": { "$ref": "personal_card.json" },
        "work_card": { "$ref": "work_card.json" },
        "profile_picture": { "$ref": "profile_picture.json" }
    },
    "required": [ "id", "created_at", "updated_at", "first_name", "last_name", "full_name" ]
}

